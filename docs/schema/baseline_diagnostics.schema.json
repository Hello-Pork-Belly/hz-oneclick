{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HZ Baseline Diagnostics JSON Output",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "generated_at",
    "format",
    "lang",
    "domain",
    "results"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "tool": {
      "type": "string"
    },
    "mode": {
      "type": "string"
    },
    "lang": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "verdict": {
      "type": "string"
    },
    "report": {
      "type": "string"
    },
    "report_json": {
      "type": "string"
    },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/result"
      }
    }
  },
  "definitions": {
    "result": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "group",
        "key",
        "state",
        "evidence",
        "suggestions"
      ],
      "properties": {
        "group": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "keyword": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "enum": [
            "PASS",
            "WARN",
            "FAIL"
          ]
        },
        "verdict": {
          "type": "string"
        },
        "hint": {
          "type": "string"
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "suggestions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "report": {
          "type": "string"
        },
        "report_json": {
          "type": "string"
        }
      }
    }
  }
}
